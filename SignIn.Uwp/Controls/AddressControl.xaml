<UserControl x:Class="SignIn.Uwp.Controls.AddressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:SignIn.Uwp.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             x:DefaultBindMode="TwoWay"
             mc:Ignorable="d">

    <StackPanel Spacing="15">
        <TextBox Header="Street address" Text="{x:Bind Address.StreetAddress, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Header="City" Text="{x:Bind Address.City, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Header="State" Text="{x:Bind Address.State, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</UserControl>
