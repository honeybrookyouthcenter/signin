<UserControl x:Class="YouthCenterSignIn.Controls.BigIconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:YouthCenterSignIn.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <StackPanel Padding="{x:Bind Padding}"
                Background="{x:Bind Background}"
                CornerRadius="{x:Bind CornerRadius}"
                Orientation="Horizontal">
        <TextBlock VerticalAlignment="Center"
                   FontFamily="Segoe MDL2 Assets"
                   FontSize="25"
                   Foreground="{x:Bind IconForeground}"
                   Text="{x:Bind Icon}" />
        <TextBlock Margin="18 0 0 0"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="SemiLight"
                   LineHeight="27"
                   LineStackingStrategy="BlockLineHeight"
                   Text="{x:Bind Label}" />
    </StackPanel>
</UserControl>
